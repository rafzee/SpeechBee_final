<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhamin.speechbee.OralActivity">



    <ImageView
        android:layout_height="300dp"
        android:layout_width="300dp"
        android:id="@+id/imageView_oral"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/tongue" />

    <ImageButton
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/imageView_oral"
        android:background="@drawable/button_white"
        android:src="@drawable/ic_baseline_navigate_before_24px" />

    <ImageButton
        android:id="@+id/go_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/imageView_oral"
        android:background="@drawable/button_white"
        android:src="@drawable/ic_baseline_navigate_next_24px" />

    <TextView
        android:id="@+id/english_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_oral"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TONGUE"
        android:textColor="@color/black"
        android:textSize="35sp" />


    <TextView
        android:id="@+id/bangla_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView_oral"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="জিহ্বা"
        android:textColor="@color/black"
        android:textSize="35sp" />

</RelativeLayout>
